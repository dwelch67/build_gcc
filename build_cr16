
# Usage
# sudo ./build_cr16

# Setup vars
export TARGET=cr16-elf
export PREFIX=/opt/gnucr16
export PATH=$PATH:$PREFIX/bin
export JN
export JN='-j 4'

rm -rf build-*
rm -rf gcc-*
rm -rf binutils-*

# Get archives
wget http://ftp.gnu.org/gnu/binutils/binutils-2.23.2.tar.bz2
wget http://ftp.gnu.org/gnu/gcc/gcc-4.7.3/gcc-4.7.3.tar.bz2

# Extract archives
bzip2 -dc binutils-2.23.2.tar.bz2 | tar -xf -
bzip2 -dc gcc-4.7.3.tar.bz2 | tar -xf -

# Build binutils
mkdir build-binutils
cd build-binutils
../binutils-2.23.2/configure --target=$TARGET --prefix=$PREFIX
make $JN all
make install

# Build GCC
mkdir ../build-gcc
cd ../build-gcc
../gcc-4.7.3/configure --target=$TARGET --prefix=$PREFIX --without-headers --with-newlib  --with-gnu-as --with-gnu-ld --enable-languages='c'
make $JN all-gcc
make install-gcc

# Build libgcc.a
make $JN all-target-libgcc CFLAGS_FOR_TARGET="-g -O2"
make install-target-libgcc

